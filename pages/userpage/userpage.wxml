<!--pages/userpage/userpage.wxml-->
<view class="container-Topbar">
    <view class="fixed-userInfo-container">
        <view class="userIcon-container">
            <image src="{{userInfo.userAvatarUrl}}" mode="aspectFit" class="userIcon"></image>
        </view>
        <view class="user-Nickname-container">
            <text class="user-Nickname">{{userInfo.userNickName}}</text>
        </view>
    </view>
    <view class="userSetting-btn-container">
        <text class="Setting-btn" bindtap="gotoUsersettingPage">用户设置></text>
    </view>
</view>

<view class="list-container">
    <view class="list_placeholder"></view>
    <view class="menu-item" wx:for="{{menuList}}" wx:key="id" bindtap="gotoMenu" data-url="{{item.url}}">
        <text class="menu-text">{{item.text}}</text>
        <text class="menu-text-arrow">></text>
    </view>
</view>