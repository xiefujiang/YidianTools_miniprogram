<view class="container">
  <!-- 输入区域 -->
  <view class="input-section">
    <view class="input-header">
      <view class="input-title">输入内容</view>
      <view class="format-selector">
        <button 
          class="format-btn {{inputFormat === 'xml' ? 'active' : ''}}" 
          bindtap="setInputFormat" 
          data-format="xml"
        >
          XML
        </button>
        <button 
          class="format-btn {{inputFormat === 'json' ? 'active' : ''}}" 
          bindtap="setInputFormat" 
          data-format="json"
        >
          JSON
        </button>
      </view>
    </view>
    
    <textarea 
      class="input-content"
      placeholder="请输入XML或JSON文本..."
      value="{{inputContent}}"
      bindinput="onInputChange"
      auto-height
    ></textarea>
    
    <view class="input-actions">
      <button class="action-btn clear-btn" bindtap="clearInput">清空</button>
      <button class="action-btn parse-btn" bindtap="parseContent">解析</button>
      <button class="action-btn convert-btn" bindtap="convertFormat" wx:if="{{inputContent.trim()}}">
        转换为{{inputFormat === 'xml' ? 'JSON' : 'XML'}}
      </button>
    </view>
  </view>
  
  <!-- 操作提示 -->
  <view class="divider">解析结果</view>
  
  <!-- 输出区域 -->
  <view class="output-section">
    <view class="output-header">
      <view class="output-title">
        {{outputFormat === 'xml' ? 'XML' : 'JSON'}} 结果
        <view class="result-status {{resultStatus}}">
          {{resultStatus === 'success' ? '解析成功' : resultStatus === 'error' ? '解析失败' : ''}}
        </view>
      </view>
      
      <button class="copy-btn" bindtap="copyResult" wx:if="{{outputContent}}">
        <icon type="copy" size="16" color="#fff" /> 复制结果
      </button>
    </view>
    
    <view class="output-content">
      <pre wx:if="{{outputContent}}">{{outputContent}}</pre>
      <view class="empty-tip" wx:else>解析结果将显示在这里...</view>
      <view class="error-message" wx:if="{{errorMessage}}">{{errorMessage}}</view>
    </view>
  </view>
  
  <!-- 使用说明 -->
  <view class="instructions">
    <view class="instructions-title">使用说明</view>
    <view class="instructions-content">
      <view class="instruction-item">1. 选择输入格式（XML或JSON）</view>
      <view class="instruction-item">2. 输入对应的文本内容</view>
      <view class="instruction-item">3. 点击"解析"按钮查看格式化结果</view>
      <view class="instruction-item">4. 点击"转换"按钮可在XML和JSON之间相互转换</view>
    </view>
  </view>
</view>
    