/* pages/tools/regex.wxss */
.container {
    padding: 16px;
    background-color: #f5f5f5;
    min-height: 100vh;
  }
  
  .title {
    font-size: 20px;
    font-weight: bold;
    text-align: center;
    margin-bottom: 20px;
    color: #333;
  }
  
  .section-title {
    font-size: 16px;
    font-weight: 600;
    margin-bottom: 8px;
    color: #555;
    width: 170rpx;
  }

  .copy-btn{
      top: -15rpx;
  }

  .input-title{
      width: 700rpx;
      display: flex;
      flex-direction: row;
  }
  
  .template-section {
    margin-bottom: 20px;
  }
  
  .template-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
  }
  
  .template-item {
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 6px;
    padding: 8px 12px;
    font-size: 14px;
    color: #333;
    cursor: pointer;
    transition: all 0.2s;
  }
  
  .template-item:hover {
    background-color: #f0f7ff;
    border-color: #c9e0ff;
    color: #0066cc;
  }
  
  .input-section {
    margin-bottom: 20px;
  }
  
  .regex-input, .text-input {
    width: 700rpx;
    min-height: 80px;
    padding: 10px;
    border: 1px solid #ddd;
    border-radius: 6px;
    font-size: 14px;
    background-color: #fff;
    box-sizing: border-box;
  }
  
  .text-input {
    min-height: 120px;
  }
  
  .options-section {
    margin-bottom: 20px;
  }
  
  .options-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 15px;
    background-color: #fff;
    padding: 12px;
    border-radius: 6px;
    border: 1px solid #ddd;
  }
  
  .option-item {
    display: flex;
    align-items: center;
    gap: 5px;
    font-size: 14px;
    color: #555;
  }
  
  .button-group {
    display: flex;
    gap: 10px;
    margin-bottom: 20px;
  }
  
  .match-btn {
    flex: 1;
    background-color: #007aff;
    color: white;
    border-radius: 6px;
    padding: 10px 0;
    font-size: 16px;
  }
  
  .clear-btn {
    flex: 1;
    background-color: #f5f5f5;
    color: #333;
    border: 1px solid #ddd;
    border-radius: 6px;
    padding: 10px 0;
    font-size: 16px;
  }
  
  .result-section {
    background-color: #fff;
    border-radius: 6px;
    padding: 15px;
    border: 1px solid #ddd;
    width: 650rpx;
  }
  
  .result-status {
    font-size: 16px;
    font-weight: 600;
    margin-bottom: 15px;
    padding-bottom: 10px;
    border-bottom: 1px solid #eee;
  }
  
  .result-status.valid {
    color: #00c853;
  }
  
  .result-status.invalid {
    color: #f44336;
  }
  
  .matches-list {
    margin-top: 10px;
  }
  
  .match-item {
    margin-bottom: 12px;
    padding: 8px;
    background-color: #f9f9f9;
    border-radius: 4px;
  }
  
  .match-index {
    font-size: 14px;
    color: #888;
    margin-bottom: 4px;
  }
  
  .match-value {
    font-size: 15px;
    color: #333;
    word-break: break-all;
  }
  
  .no-match {
    color: #777;
    font-size: 15px;
    text-align: center;
    padding: 10px;
  }
  
  .error-message {
    color: #f44336;
    font-size: 14px;
    padding: 10px;
    background-color: #ffebee;
    border-radius: 4px;
  }
  
  .modal-mask {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1000;
  }
  
  .modal-container {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    background: #fff;
    border-top-left-radius: 16rpx;
    border-top-right-radius: 16rpx;
    z-index: 1001;
    padding: 30rpx;
    max-height: 70vh;
    overflow-y: auto;
  }
  
  .modal-title {
    font-size: 34rpx;
    font-weight: bold;
    text-align: center;
    margin-bottom: 30rpx;
    padding-bottom: 20rpx;
    border-bottom: 1px solid #eee;
  }
  
  .modal-list {
    margin-bottom: 30rpx;
  }
  
  .modal-item {
    padding: 24rpx 0;
    font-size: 30rpx;
    border-bottom: 1px solid #eee;
  }
  
  .modal-close {
    width: 100%;
    padding: 24rpx 0;
    text-align: center;
    font-size: 30rpx;
    background: #f5f5f5;
    border-radius: 8rpx;
    margin-top: 20rpx;
  }
  