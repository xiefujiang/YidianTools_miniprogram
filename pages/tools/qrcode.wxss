/* pages/tools/qrcode.wxss */
.container {
    padding: 30rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #f5f5f5;
    min-height: 100vh;
    box-sizing: border-box;
  }
  
  .title {
    font-size: 36rpx;
    font-weight: bold;
    margin: 40rpx 0;
    color: #333;
  }
  
  .input-area {
    width: 100%;
    margin-bottom: 30rpx;
  }
  
  textarea {
    width: 100%;
    min-height: 160rpx;
    padding: 20rpx;
    background-color: #fff;
    border-radius: 12rpx;
    font-size: 28rpx;
    border: 1rpx solid #eee;
    box-sizing: border-box;
    line-height: 1.5;
  }
  
  .placeholder-style {
    color: #999;
  }
  
  .generate-btn {
    width: 100%;
    height: 90rpx;
    line-height: 60rpx;
    background-color: #07c160;
    color: #fff;
    font-size: 32rpx;
    border-radius: 45rpx;
    margin: 20rpx 0 40rpx;
    text-align: center;
  }
  
  .generate-btn:disabled {
    background-color: #ccc;
  }
  
  .qrcode-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 20rpx;
    width: 100%;
  }
  
  .qrcode-canvas {
    width: 70vw;
    height: 70vw;
    background-color: #fff;
    border-radius: 12rpx;
    box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
  }
  
  .save-btn {
    width: 50%;
    height: 88rpx;
    line-height: 60rpx;
    background-color: #007aff;
    color: #fff;
    font-size: 30rpx;
    border-radius: 44rpx;
    margin-top: 40rpx;
    text-align: center;
  }
  
  .tips {
    margin-top: 40rpx;
    font-size: 26rpx;
    color: #666;
  }