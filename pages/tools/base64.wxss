/* pages/tools/base64.wxss */
.container {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    padding: 16rpx;
    background-color: #f5f5f5;
}

.container.dark {
    background-color: #1a1a1a;
    color: #f0f0f0;
}

/* 共享的section容器样式 */
.section-container {
    background-color: white;
    border-radius: 8rpx;
    padding: 20rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
    border: 1px solid #eee;
}

.container.dark .section-container {
    background-color: #333;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.3);
    border-color: #444;
}

/* 输入输出区域样式 */
.input-section,
.output-section {
    width: 700rpx;
    background-color: white;
    border-radius: 8rpx;
    padding: 20rpx;
    margin-bottom: 24rpx;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
    border: 1px solid #eee;
}

.container.dark .input-section,
.container.dark .output-section {
    background-color: #333;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.3);
    border-color: #444;
}

.converter-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20rpx;
    padding: 0 10rpx;
}

.picker-view {
    background-color: #fff;
    border-radius: 8rpx;
    padding: 16rpx 24rpx;
    font-size: 32rpx;
    border: 1px solid #eee;
    display: flex;
    align-items: center;
}

.container.dark .picker-view {
    background-color: #333;
    border-color: #444;
}

.arrow-icon {
    margin-left: 10rpx;
    color: #888;
}

.reverse-btn {
    background-color: #4a6cf7;
    color: white;
    padding: 16rpx 32rpx;
    border-radius: 8rpx;
    font-size: 28rpx;
}

.format-description {
    font-size: 24rpx;
    color: #666;
    padding: 16rpx;
    background-color: #f0f0f0;
    border-radius: 8rpx;
    margin-bottom: 20rpx;
    line-height: 1.5;
}

.container.dark .format-description {
    color: #ccc;
    background-color: #2c2c2c;
}

.section-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 16rpx;
    font-size: 28rpx;
    font-weight: 500;
    padding-bottom: 12rpx;
    border-bottom: 1px solid #eee;
    /* 防止子元素换行 */
    white-space: nowrap;
    /* 限制最小宽度，避免挤压 */
    min-width: 0;
  }

.container.dark .section-title {
    border-bottom-color: #444;
}

.clear-btn, .tool-btn {
    font-size: 24rpx;
    padding: 6rpx 12rpx; /* 减小内边距 */
    height: auto;
    line-height: normal;
    /* 限制最大宽度 */
    max-width: 120rpx;
    /* 文本过长时省略 */
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
  }

/* 输入文本框 - 固定高度并支持滚动 */
.input-textarea {
    width: 100%;
    height: 300rpx;
    /* 固定高度 */
    max-height: 300rpx;
    /* 限制最大高度 */
    border: 1px solid #eee;
    border-radius: 8rpx;
    padding: 16rpx;
    font-size: 28rpx;
    line-height: 1.5;
    box-sizing: border-box;
    overflow-y: auto;
    /* 垂直方向溢出时显示滚动条 */
    resize: none;
    /* 禁止手动调整大小 */
}

.title-actions {
    display: flex;
    gap: 8rpx;
    /* 允许按钮区域在必要时压缩 */
    flex-shrink: 1;
  }

.container.dark .input-textarea {
    border-color: #444;
    background-color: #2c2c2c;
    color: #f0f0f0;
}

.convert-btn {
    background-color: #4a6cf7;
    color: white;
    padding: 18rpx;
    border-radius: 8rpx;
    font-size: 30rpx;
    margin-bottom: 20rpx;
}

/* 输出内容区域 - 固定高度并支持滚动 */
.output-content {
    height: 300rpx;
    /* 固定高度，与输入框保持一致 */
    max-height: 300rpx;
    /* 限制最大高度 */
    padding: 16rpx;
    border: 1px solid #eee;
    border-radius: 8rpx;
    font-size: 28rpx;
    line-height: 1.5;
    white-space: pre-wrap;
    word-break: break-all;
    overflow-y: auto;
    /* 垂直方向溢出时显示滚动条 */
}

.container.dark .output-content {
    border-color: #444;
    background-color: #2c2c2c;
}

.error-message {
    color: #ff4d4f;
    font-size: 26rpx;
    padding: 16rpx;
    background-color: #fff2f0;
    border-radius: 8rpx;
    margin-bottom: 20rpx;
}

.container.dark .error-message {
    color: #ff7875;
    background-color: #421414;
}

.upload-btn {
    background-color: #07c160;
    color: white;
    padding: 16rpx;
    border-radius: 8rpx;
    font-size: 28rpx;
    margin-bottom: 16rpx;
}

.preview-image {
    width: 100%;
    border-radius: 8rpx;
    margin-bottom: 16rpx;
}

.preview-label {
    font-size: 26rpx;
    color: #666;
    margin-bottom: 8rpx;
}

.container.dark .preview-label {
    color: #ccc;
}

.save-image-btn {
    background-color: #faad14;
    color: white;
    padding: 12rpx;
    border-radius: 8rpx;
    font-size: 26rpx;
    margin-bottom: 16rpx;
}

.batch-tools {
    display: flex;
    justify-content: space-between;
    margin-bottom: 20rpx;
}

.batch-btn,
.file-btn {
    flex: 1;
    margin: 0 8rpx;
    padding: 16rpx;
    font-size: 28rpx;
}

.batch-btn {
    background-color: #1890ff;
    color: white;
}

.file-btn {
    background-color: #722ed1;
    color: white;
}

.share-btn {
    background-color: #07c160;
    color: white;
    padding: 16rpx;
    border-radius: 8rpx;
    font-size: 28rpx;
    margin-top: 100rpx;
    top: -50rpx;
    transition: all 0.3s ease;
  }
  
  /* 禁用状态的分享按钮样式 */
  .share-btn[disabled] {
    background-color: #c9cdD2;
    color: rgb(68, 68, 68);
    cursor: not-allowed;
    opacity: 0.8;
  }

.output-tools {
    display: flex;
    gap: 8rpx;
}